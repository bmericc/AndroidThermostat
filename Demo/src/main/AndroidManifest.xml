<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exosite.demo"
    android:versionCode="9"
    android:versionName="0.9" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.exosite.demo.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.LOGIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.exosite.demo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.exosite.demo.DeviceListActivity"
            android:label="@string/select_device" >
            <intent-filter>
                <action android:name="android.intent.action.SELECT_DEVICE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.exosite.demo.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.exosite.demo.AddDeviceActivity"
            android:label="@string/title_activity_add_device"
            android:parentActivityName="com.exosite.demo.DeviceListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="SelectDeviceActivity" />
        </activity>
        <activity
            android:name="com.exosite.demo.DeviceActivity"
            android:label="@string/title_activity_device" >
        </activity>
    </application>

</manifest>
